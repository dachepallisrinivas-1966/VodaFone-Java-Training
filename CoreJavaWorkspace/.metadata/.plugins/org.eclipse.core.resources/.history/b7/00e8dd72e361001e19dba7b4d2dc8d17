package com.vodafone.model;

public class Product {
	private int id;
	private String name;
	private double price;
	private static int tax = 18;			/* static data member */
	
	/* parameter constructor */
	public Product(int id, String name, double price, int tax) {
		this.id = id;
		this.name = name;
		this.price = price;
		this.tax = tax;
	}
	
	public void show() {
		System.out.println("Id = " + id + "\n" + "Name = " + name + "\n" + "Price = " + price + "\n" + "Tax = " + tax);
		
	}
}



	
	